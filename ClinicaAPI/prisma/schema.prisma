generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:senai@127.0.0.1:3306/clinica_dever"
}

// Tabela usuario
model Usuario {
  id        Int         @id @default(autoincrement())
  nome      String
  email     String      @unique
  senha     String
  cargo     String
  Protuario Protuario[]
  Consulta  Consulta[]
}

// Tabela protuario
model Protuario {
  id                    Int      @id @default(autoincrement())
  descricao             String
  data                  DateTime
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])
  usuario               Usuario  @relation(fields: [medico_responsavel_id], references: [id])
}

// Tabela consulta
model Consulta {
  id                    Int      @id @default(autoincrement())
  motivo                String
  data_consulta         DateTime
  observacoes           String
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])
  usuario               Usuario  @relation(fields: [medico_responsavel_id], references: [id])
}

// Tabela paciente
model Paciente {
  id              Int         @id @default(autoincrement())
  nome            String
  cpf             String
  telefone        Int
  email           String
  data_nascimento DateTime
  responsavel     String?
  sexo            String
  Protuario       Protuario[]
  Consulta        Consulta[]
  Exame           Exame[]
}

// Tabela exame
model Exame {
  id           Int      @id @default(autoincrement())
  tipo_exame   String
  resultado    String
  data_exame   DateTime
  link_arquivo String
  observacoes  String
  paciente_id  Int
  paciente     Paciente @relation(fields: [paciente_id], references: [id])
}
